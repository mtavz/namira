<script src="/Scripts/MagnificPopup/jquery.magnific-popup.min.js"></script>
<style>
    button.mfp-arrow-right {
        background-image: url(/Content/images/icons/icon-next.png);
        background-position: center center;
        background-repeat: no-repeat;
    }

    button.mfp-arrow-left {
        background-image: url(/Content/images/icons/icon-prev.png);
        background-position: center center;
        background-repeat: no-repeat;
    }
    button.mfp-close {
        width: 75px !important;
        height: 58px !important;
        line-height: 44px;
        position: fixed;
        right: 0;
        top: 0;
        color: transparent !important;
        background-image: url(/Content/images/icons/icon-close.png);
        background-position: center center;
        background-repeat: no-repeat;
        cursor: pointer !important;
        -webkit-transition: all 0.4s;
        -o-transition: all 0.4s;
        -moz-transition: all 0.4s;
        transition: all 0.4s;
    }
</style>
<script type="text/javascript">

    // Quick view



    /*==================================================================
        [ Show modal1 ]*/
    $('.js-show-modal1').on('click', function (e) {
        e.preventDefault();
        $('.js-modal1').addClass('show-modal1');
    });

    $('.js-hide-modal1').on('click', function () {
        $('.js-modal1').removeClass('show-modal1');
    });



    $('.wrap-slick3').each(function () {
        $(this).find('.slick3').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            fade: true,
            infinite: true,
            autoplay: false,
            autoplaySpeed: 6000,

            arrows: true,
            appendArrows: $(this).find('.wrap-slick3-arrows'),
            prevArrow: '<button class="arrow-slick3 prev-slick3"><i class="fa fa-angle-left" aria-hidden="true"></i></button>',
            nextArrow: '<button class="arrow-slick3 next-slick3"><i class="fa fa-angle-right" aria-hidden="true"></i></button>',

            dots: true,
            appendDots: $(this).find('.wrap-slick3-dots'),
            dotsClass: 'slick3-dots',
            customPaging: function (slick, index) {
                var portrait = $(slick.$slides[index]).data('thumb');
                return '<img src=" ' + portrait + ' " /><div class="slick3-dot-overlay"></div>';
            },
        });
    });

    $('.gallery-lb').each(function () { // the containers for all your galleries
        $(this).magnificPopup({
            delegate: 'a', // the selector for gallery item
            type: 'image',
            gallery: {
                enabled: true
            },
            mainClass: 'mfp-fade'
        });
    });
</script>

<!-- Quick view modal -->


<div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
    <button class="how-pos3 hov3 trans-04 js-hide-modal1">
        <img src="/Content/images/icons/icon-close.png" alt="CLOSE">
    </button>

    <div class="row">
        <div class="col-md-6 col-lg-7 p-b-30">
            <div class="p-l-25 p-r-30 p-lr-0-lg">
                <div class="wrap-slick3 flex-sb flex-w">
                    <div class="wrap-slick3-dots"></div>
                    <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                    <div class="slick3 gallery-lb">
                        <div class="item-slick3" data-thumb="/Content/images/product-detail-01.jpg">
                            <div class="wrap-pic-w pos-relative">
                                <img src="/Content/images/product-detail-01.jpg" alt="IMG-PRODUCT">

                                <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/Content/images/product-detail-01.jpg">
                                    <i class="fa fa-expand"></i>
                                </a>
                            </div>
                        </div>

                        <div class="item-slick3" data-thumb="/Content/images/product-detail-02.jpg">
                            <div class="wrap-pic-w pos-relative">
                                <img src="/Content/images/product-detail-02.jpg" alt="IMG-PRODUCT">

                                <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/Content/images/product-detail-02.jpg">
                                    <i class="fa fa-expand"></i>
                                </a>
                            </div>
                        </div>

                        <div class="item-slick3" data-thumb="/Content/images/product-detail-03.jpg">
                            <div class="wrap-pic-w pos-relative">
                                <img src="/Content/images/product-detail-03.jpg" alt="IMG-PRODUCT">

                                <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/Content/images/product-detail-03.jpg">
                                    <i class="fa fa-expand"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-5 p-b-30">
            <div class="p-l-25 p-r-30 product-single">
                @* <h1 class="product-single__title uppercase">@ViewBag.ItemDetail.InPrice</h1>*@

                <div class="rating">
                    <a href="#">3 Reviews</a>
                </div>

                <span class="product-single__price">
                    <ins>
                        <span class="amount">$17.99</span>
                    </ins>
                    <del>
                        <span>$30.00</span>
                    </del>
                </span>

                <div class="brief-info clearfix">
                    <p>
                        Namira is a very slick and clean e-commerce template with endless possibilities. Creating an awesome clothes store with this Theme is easy than you can imagine.
                    </p>
                </div>

                <div class="product_meta">
                    <ul>
                        @foreach (var item in Model)
                        {
                            <li>

                                <span class="product-code">Code:<span> @item.Code</span>  </span>
                            </li>


                            <li>
                                <span class="product-material">Material: <span>@item.Material</span></span>
                            </li>
                            <li>
                                <span class="product-country">Country: <span>@item.Country</span></span>
                            </li>
                        }
                    </ul>
                </div>

                <div class="colors clearfix">
                    <span class="colors__label">Color: <span class="colors__label-selected">Fadaed Blue</span></span>
                    <a href="#" class="colors__item colors__item--selected blue"></a>
                    <a href="#" class="colors__item black"></a>
                    <a href="#" class="colors__item pink"></a>
                </div>

                <div class="size-quantity clearfix">
                    <div class="size">
                        <label>Size</label>
                        <select name="size" id="size__select" class="size__select">
                            <option value="xs">XS</option>
                            <option value="s">S</option>
                            <option value="m">M</option>
                            <option value="l">L</option>
                            <option value="xl">XL</option>
                        </select>
                    </div>

                    <div class="quantity">
                        <label>Quantity</label>
                        <select name="quantity" id="quantity__select" class="quantity__select">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>

                <div class="row row-10 product-single__actions clearfix">
                    @{
                        var session = (Models.Code.UserSession)Session[Models.Code.CommonConstants.USER_SESSION];
                    }
                    @if (session != null)
                    {
                        <div class="col">
                            <a href="#" class="btn btn-lg btn-dark product-single__add-to-wishlist">
                                <i class="ui-heart"></i>
                                <span>Wishlist</span>
                            </a>
                        </div>
                    }

                    <div class="col">
                        <a href="#" class="btn btn-lg btn-success product-single__add-to-wishlist">
                            <i class="zmdi zmdi-info"></i>
                            <span>View detail</span>
                        </a>
                    </div>

                    <div class="col">
                        <a href="#" class="btn btn-lg btn-info product-single__add-to-cart" id="add2cart" data-id=4>
                            <i class="ui-bag"></i>
                            <span>Add to Cart</span>
                        </a>
                    </div>


                </div>
            </div> <!-- end col product description -->
        </div>
    </div>
</div>


